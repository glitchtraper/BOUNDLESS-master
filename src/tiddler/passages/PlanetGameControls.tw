/% Post-humans %/\
<<if $humanPop gt 0>>\
<<if $planetCalfood gte $humanPop>><<set $planetCalfood -= $humanPop>><<elseif $planetMeat gte $humanPop>><<set $planetMeat -= $humanPop>><<elseif $planetMeat lt $humanPop>><<set $casualties = ($humanPop - $planetMeat); $planetMeat = 0>><<if $planetCrops gte $casualties>><<set $planetCrops -= $casualties; $casualties = 0>><<else>>/% Somebody starves. %/
<<set $humanPop -= $casualties; $playerPlanetPopulation -= $casualties>><<display PlanetGameOccuDeaths>>
<alertbanner>[img[icon_redalert]]The ''post-human population is starving!''</alertbanner><<set $casualties = 0>><<if $popFatness gt 10>><<set $popFatness - random(1,2)>><<endif>><<endif>><<endif>><<endif>>\
\
/% Aladri %/\
<<if $elfPop gt 0>>\
<<if $planetCalfood gte $elfPop>><<set $planetCalfood -= $elfPop>><<elseif $planetMeat gte $elfPop>><<set $planetMeat -= $elfPop>><<elseif $planetMeat lt $elfPop>><<set $casualties = ($elfPop - $planetMeat); $planetMeat = 0>><<if $planetCrops gte $casualties>><<set $planetCrops -= $casualties; $casualties = 0>><<else>>/% Somebody starves. %/
<<set $elfPop -= $casualties; $playerPlanetPopulation -= $casualties>><<display PlanetGameOccuDeaths>>
<alertbanner>[img[icon_redalert]]The ''aladri population is starving!''</alertbanner><<set $casualties = 0>><<if $popFatness gt 10>><<set $popFatness - random(1,2)>><<endif>><<endif>><<endif>><<endif>>\
\
/% Arka %/\
<<if $arkaPop gt 0>>\
<<if $planetCalfood gte $arkaPop>><<set $planetCalfood -= $arkaPop>><<elseif $planetMeat gte $arkaPop>><<set $planetMeat -= $arkaPop>><<elseif $planetMeat lt $arkaPop>><<set $casualties = ($arkaPop - $planetMeat); $planetMeat = 0>><<if $planetCrops gte $casualties>><<set $planetCrops -= $casualties; $casualties = 0>><<else>>/% Somebody starves. %/
 <<set $arkaPop -= $casualties; $playerPlanetPopulation -= $casualties>><<display PlanetGameOccuDeaths>>
<alertbanner>[img[icon_redalert]]The ''arka population is starving!''</alertbanner><<set $casualties = 0>><<if $popFatness gt 10>><<set $popFatness - random(1,2)>><<endif>><<endif>><<endif>><<endif>>\
\
/% Slimes %/\
<<if $slimePop gt 0>>\
<<if $planetCalfood gte $slimePop>><<set $planetCalfood -= $slimePop>><<elseif $planetSlime gte $slimePop>><<set $planetSlime -= $slimePop>><<elseif $planetSlime lt $slimePop>><<set $casualties = ($slimePop - $planetSlime); $planetSlime = 0>><<elseif $playerPlanetFluid is "Dirty Water">>/% Somebody starves. %/
<<set $slimePop -= $casualties; $playerPlanetPopulation -= $casualties>><<display PlanetGameOccuDeaths>>
<alertbanner>[img[icon_redalert]]The ''slime population is drying up!''</alertbanner><<set $casualties = 0>><<if $popFatness gt 10>><<set $popFatness - random(1,3)>><<endif>><<endif>><<endif>>\
\
\
/% Incidental Population Weight Loss %/\
<<set $popFatness -= either(0,0,0,1); $popAnimalFatness -= either(0,0,0,0,1)>>\
\
\
/% Incidental Animal breeding %/\
<<set $playerAnimalPopulation += either(0,0,0,0,0,1)>>\
\
\
/% Population Weight Gain %/\
<<if $planetCalfood gte (($playerPlanetPopulation - $demonPop) * 2)>><<set $popFatness += 1>>
<banner>[img[icon_alert]]Your population is ''putting on weight!''</banner><<endif>>\
<<if $planetCrops gte ($playerAnimalPopulation * 1.5)>><<set $popAnimalFatness += 1>>
<banner>[img[icon_alert]]The animal population is ''looking plumper!''</banner><<endif>>\
\
\
<<if $planetFattenium gt 0>><<set $randomizer = random(1,24)>>\
	<<if $randomizer is 1>><<set $popFatness += random(2,5)>>
<banner>[img[icon_alert]]Exposure to ''fattenium'' is causing the population to gain weight!</banner>\
<<endif>><<endif>>\
\
\
<<if $planetMiracrystal gt 0>><<set $randomizer = random(1,32)>>\
	<<if $randomizer is 1>><<set $popFatness += random(1,3)>>
<banner>[img[icon_alert]]Exposure to ''miracrystal'' is causing the population to gain weight!</banner>\
<<endif>><<endif>>\
\
\
<<if $planetPlutonium gt 0>><<set $randomizer = random(1,32)>>\
	<<if $randomizer is 1>><<set $popFatness -= random(1,3)>>
<banner>[img[icon_alert_critical]]The population is looking a little sickly due to ''plutonium'' exposure...</banner>\
<<endif>><<endif>>\
\
\
/% Population Girth Check %/\
<<if $popFatness lt 200>>
<banner>[img[icon_redalert]]Your population is ''withering away!''</banner>
<<elseif ($popFatness gte 200) and ($popFatness lt 300)>>
<banner>[img[icon_alert]]Your population is ''looking rather scrawny...''</banner>
<<elseif ($popFatness gte 300) and ($popFatness lt 500)>>
<banner>[img[icon_alert]]Your population is ''looking quite plump!''</banner>
<<elseif ($popFatness gte 500) and ($popFatness lt 600)>>
<banner>[img[icon_alert]]Your population is ''nice and fat!''</banner>
<<elseif ($popFatness gte 600) and ($popFatness lt 800)>>
<banner>[img[icon_alert]]Your population is ''VERY fat!''</banner>
<<elseif ($popFatness gte 800) and ($popFatness lt 1000)>>
<banner>[img[icon_alert]]Your population is ''growing fatter and fatter!''</banner>
<<elseif ($popFatness gte 1000) and ($popFatness lt 1500)>>
<banner>[img[icon_alert]]Your population is ''EXTREMELY fat!''</banner>
<<elseif $popFatness gte 1500>>
<banner>[img[icon_alert]]Your population is ''growing too fat to move around without help!''</banner><<endif>>\
\
\
/% Animal Population Girth Check %/\
<<if $playerAnimalPopulation gt 0>>\
	<<if $popAnimalFatness lt 20>><banner>[img[icon_redalert]]The animals are ''withering away!''</banner>
	<<elseif ($popAnimalFatness gte 20) and ($popAnimalFatness lt 40)>>
	<banner>[img[icon_alert]]The animals are ''looking rather scrawny...''</banner>
	<<elseif ($popAnimalFatness gte 40) and ($popAnimalFatness lt 60)>>
	<banner>[img[icon_alert]]The animals are ''looking quite plump!''</banner>
	<<elseif ($popAnimalFatness gte 60) and ($popAnimalFatness lt 80)>>
	<banner>[img[icon_alert]]The animals are ''flourishing!''</banner>
	<<elseif ($popAnimalFatness gte 80) and ($popAnimalFatness lt 120)>>
	<banner>[img[icon_alert]]The animals are ''getting fat!''</banner>
	<<elseif ($popAnimalFatness gte 120) and ($popAnimalFatness lt 160)>>
	<banner>[img[icon_alert]]The animals are ''getting VERY fat!''</banner>
	<<elseif ($popAnimalFatness gte 160) and ($popAnimalFatness lt 200)>>
	<banner>[img[icon_alert]]The animals are ''growing HUGE!''</banner>
	<<elseif $popAnimalFatness gte 200>>
	<banner>[img[icon_alert]]The animals are ''growing too fat to move!''</banner><<endif>><<endif>>\
\
<<set $dinnerBell = 0>><<endif>>\
\
\
/% Planet Size Classes %/\
<<if $planetGirth / 10 lte 100000>><<set $playerPlanetSize = "Satellite">>
<<elseif ($planetGirth / 10 gte 1000000) and ($planetGirth / 10 lt 50000000)>><<set $playerPlanetSize = "Moon">>
<<elseif ($planetGirth / 10 gte 50000000) and ($planetGirth / 10 lt 100000000)>><<set $playerPlanetSize = "Dwarf Planet">>
<<elseif ($planetGirth / 10 gte 100000000) and ($planetGirth / 10 lt 1000000000)>><<set $playerPlanetSize = "Planet">>
<<elseif $planetGirth / 10 gte 1000000000>><<set $playerPlanetSize = "Titan Planet">><<endif>></framed></invisiframe></center>
